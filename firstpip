pipeline {
  agent {
    docker { image 'node:16-alpine' }    
  }
  stages {
    stage ('Build') {
      steps {
        echo ('Build the first successful deployment')
      }
    } 
    stage ('Test') {
      steps {
         sh 'node --version'
      }
    }
    stage ('Deploy') {
      steps {
        sh 'kubectl apply -f deployment.yml'
        echo ('Deployment success')
      }
    }
  }
}
