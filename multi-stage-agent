pipeline {
  agent none 
     stages {
       stage ('Back-End') {
         agent {
             docker { image 'maven:3.8.1-adoptopenjdk-11' }
         } 
      stages{
        stage ('checkout') {
          steps {
            git branch: 'main', url: 'https://github.com/priyamari31/jenkinsFirstPipeline'
          }
        }
        stage ('Compile') {
          steps {
            sh 'javac HelloWorld.java'
          }
        }
        stage ('Run') {
          steps {
            sh 'java HelloWorld'
          }
        }  
     }
  }
  stage ('Front-End') {
       agent {
          docker { image 'node:16-alpine' }
       }
  stages {
    stage ('checkout') {
      steps {
            git branch: 'main', url: 'https://github.com/priyamari31/jenkinsFirstPipeline'
      }
    }
    stage ('Install') {
       steps {
          deleteDir()
            sh 'npm install'
       }
    }
    stage ('Run') {
       steps {
          sh 'node nodejs.js'
      }
    }
  }
 }
}
}
