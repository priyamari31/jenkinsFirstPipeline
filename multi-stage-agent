pipeline {
  agent none 
     stages {
       stage ('Back-End') {
         agent {
             docker { image 'maven:3.8.1-adoptopenjdk-11' }
         } 
      stages{
        stage ('checkout') {
          steps {
            git 'https://github.com/priyamari31/jenkinsFirstPipeline'
          }
        }
        stage ('Compile') {
          steps {
            sh 'javac java-helloworld.java'
          }
        }
        stage ('Run') {
          steps {
            sh 'java java-helloworld'
          }
        }  
     }
}
stages{
     stage ('Front-End') {
       agent {
          docker { image 'node:16-alpine' }
       }
        stage ('checkout') {
          steps {
            git 'https://github.com/priyamari31/jenkinsFirstPipeline'
          }
        }
        stage ('Install') {
          steps {
            sh 'npm install'
          }
        }
        stage ('Run') {
          steps {
            sh 'node nodejs.js'
          }
        }
     }
  }
}
